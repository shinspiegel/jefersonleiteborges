{
  "tags": { "allowUnknownTags": true },
  "source": { "include": ["./src"] },
  "plugins": ["plugins/markdown", "better-docs/component"],
  "opts": {
    "encoding": "utf8",
    "destination": "docs/",
    "recurse": true,
    "verbose": true,
    "template": "./node_modules/minami"
  },
  "templates": {
    "cleverLinks": false,
    "monospaceLinks": true,
    "useLongnameInNav": false,
    "showInheritedInNav": true
  }
}
